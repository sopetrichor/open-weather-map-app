{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@actions/*": ["actions/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@parsers/*": ["parsers/*"],
      "@prop-types/*": ["prop-types/*"],
      "@sagas/*": ["sagas/*"],
      "@reducers/*": ["reducers/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["./src/**/*"]
}
